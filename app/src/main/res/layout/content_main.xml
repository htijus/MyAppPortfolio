<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.app.example.andriod.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:background="#F08C35"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:onClick="sendToastMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:onClick="sendToastMessage"
        android:layout_below="@+id/button1"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:onClick="sendToastMessage"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:onClick="sendToastMessage"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:text="BACON READER"
        android:id="@+id/button5"
        android:onClick="sendToastMessage"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#B71C1C"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:onClick="sendToastMessage"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
